<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_user_image_view"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/adnan"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_user_image_view"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/list_user_image_view"
        android:text="Display Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/list_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_user_name"
        android:layout_below="@+id/list_user_name"
        android:layout_marginTop="12dp"
        android:text="User default status"
        android:textSize="14sp" />

</RelativeLayout>