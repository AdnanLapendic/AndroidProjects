<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.enssol.lapendic.adnan.enssolchatapp.ProfileActivity"
    android:background="#212121">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/adnan"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/profile_display_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/profile_display_status_view"
        android:layout_width="250dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Display Name"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/profile_display_friends_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_status_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Total friends"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/send_friend_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_friends_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Send Friend request"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/decline_friend_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/send_friend_request_button"
        android:layout_below="@+id/send_friend_request_button"
        android:backgroundTint="@color/colorAccent"
        android:text="Decline Friend request"
        android:textColor="@android:color/white" />
</RelativeLayout>
