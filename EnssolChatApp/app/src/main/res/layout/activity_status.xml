<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.enssol.lapendic.adnan.enssolchatapp.StatusActivity">

    <include
        android:id="@+id/status_activity_toolbar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_activity_toolbar"
        android:layout_marginTop="57dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:hint="@string/your_status" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_new_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/change_status_btn"
        android:textColor="@android:color/white" />


</RelativeLayout>
