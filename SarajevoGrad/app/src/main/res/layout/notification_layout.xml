<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:background="#e8eaf6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/listViewImage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/news"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/listViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="3"
            android:textColor="#000000"
            android:text="asdfasdfa a asd a ljl nkdb kb knk jh jklhk jhkhikuhgiuho iuhohoi hjoihoihohouhoihooij oijho hoi hohoihoi hohoihoih oihoihiyguy gtufytrdrtdr"
            android:textSize="15sp"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/listViewDate"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32/13/2222"
                android:textSize="12dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/listViewTime"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22:41"
                android:textSize="12sp"
                android:paddingTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
