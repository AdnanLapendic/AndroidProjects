<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:focusable="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dmd.lapa.sarajevograd2.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:onClick="onTopArticleClick"
                android:orientation="vertical"
                android:scaleType="centerCrop">

                <ImageView
                    android:id="@+id/mainPageLastNewsImageTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/news"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:background="#99000000"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainPageLastNewsTitleTop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fadingEdge="vertical"
                            android:paddingLeft="10dp"
                            android:text="aljnalkjn kjn kjnakn skan ksnk ajnks akjk janskjn dakn skjnak nska kja ksjndka"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/mainPageLastNewsDateTop"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:fadingEdge="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="14/09/2016"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/mainPageLastNewsTimeTop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="11:48"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/mainPageLastNewsCategoryTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="5dp"
                    android:text="BiH"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#e8eaf6"
                    android:onClick="onLeftArticleClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mainPageLastNewsCategoryLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="CATEGORY"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/mainPageLastNewsImageLeft"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/news" />

                    <TextView
                        android:id="@+id/mainPageLastNewsTitleLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:paddingLeft="5dp"
                        android:text="asdfasdfa a asd a ljl nkdb kb knk jh jklhk jhkhik uhgiuho iuhohoi hjoihoi hohouh oihooij oijho hoi hohoihoi hohoihoih oihoihiyguy gtufytrdrtdr"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/mainPageLastNewsDateLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:text="32/13/2222"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/mainPageLastNewsTimeLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingRight="5dp"
                            android:text="22:41"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#e8eaf6"
                    android:onClick="onRightArticleClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mainPageLastNewsCategoryRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="CATEGORY"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/mainPageLastNewsImageRight"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:focusableInTouchMode="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/news" />

                    <TextView
                        android:id="@+id/mainPageLastNewsTitleRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:paddingLeft="5dp"
                        android:text="asdfasdfa a asd a ljl nkdb kb knk jh jklhk jhkhikuhgiuho iuhohoi hjoihoihohouhoihooij oijho hoi hohoihoi hohoihoih oihoihiyguy gtufytrdrtdr"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/mainPageLastNewsDateRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:text="32/13/2222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mainPageLastNewsTimeRight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingRight="5dp"
                            android:text="22:41"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="BiH"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentBih"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentBih"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            tools:layout="@android:layout/simple_list_item_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="REGIJA"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentRegija"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentRegija"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@android:layout/simple_list_item_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="SVIJET"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentSvijet"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentSvijet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@android:layout/simple_list_item_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="SPORT"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentSport"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentSport"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@android:layout/simple_list_item_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="SCICH"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentScitech"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentScitech"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@android:layout/simple_list_item_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="ZANIMLJIVOSTI"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <fragment
            android:id="@+id/mainActivityListFragmentZanimljivosti"
            class="com.dmd.lapa.sarajevograd2.fragments.ListFragmentZanimljivosti"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout="@android:layout/simple_list_item_1" />

    </LinearLayout>

</ScrollView>
