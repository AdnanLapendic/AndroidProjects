<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmd.lapa.sarajevograd2.fragments.ArticleViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/articleDetailViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:id="@+id/articleDetailViewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/news"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/articleDetailViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/07/2016"
                android:layout_weight="1"
                android:paddingLeft="50dp"/>

            <TextView
                android:id="@+id/articleDetailViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:61"
                android:layout_weight="1"
                android:gravity="center"/>


        </LinearLayout>

        <TextView
            android:id="@+id/articleDetailViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:paddingTop="12dp"
            android:text="kansdk jakd hakhdkajnd kjankd abkd bakd baskjd bkajbdkasjbd kajnbdk jandk abkd abkjdhb aksdbakbd kabdka"/>

        <TextView
            android:id="@+id/articleDetailViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:text="Lorem ipsum dolor sit amet, at delenit similique nec. In modus erant commune qui.
            Vim te verear omittam conceptam, ne autem voluptaria neglegentur has, ei sit omnium vivendo delectus. Duo id idque eruditi nominavi.
            Id quo prima graece accusata, id duo sale facilisis, tibique luptatum vulputate pro id. Pro et prima iudico vidisse, eum te lorem legendos periculis.
            Ullum vitae mei ne. Eum ad labore animal maiestatis, pri ne dolor omnesque detraxit. In pri verear timeam persius, clita deleniti et pro. Ad sit tota posidonium. Ne cum agam sententiae.
            Quo ei vide putent, ei has minim eripuit antiopam. Inermis imperdiet et qui, ex eros "/>

        <ImageView
            android:paddingTop="50dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
    </LinearLayout>

</ScrollView>
